<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CAPMission.View.TimeEntryView">
    <ContentPage.Content>
        <StackLayout Margin="10,50,10,0" >
            <Label Text="{Binding PageLabel}"  HorizontalTextAlignment="Center" Font="Bold" WidthRequest="120"/>
            <TimePicker Time="{Binding Time}" HorizontalOptions="Center"/>
            <Button Text="Close" Command="{Binding CancelCommand}" Style="{StaticResource ButtonStyle}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>